  <script src="https://static.tumblr.com/cqfswrg/1xXo902k0/jquery_photoset.js" defer></script>
  <script src="https://static.tumblr.com/wgg6svp/jeWobvfj7/unnest.min.js" defer></script>

  <!-- Initialize Photoset and plugins -->
  <script defer>
    document.addEventListener('DOMContentLoaded', function () {
      // Photoset initialization
      $('.photo-slideshow').pxuPhotoset({
        gutter: '8px',
        rounded: false
      });

      // Lightbox setup
      function setupLightbox() {
        $('.make_lightbox').off('click').on('click', function () {
          const $el = $(this);
          const lbArray = [{
            width: $el.data('width'),
            height: $el.data('height'),
            low_res: $el.data('lowres'),
            high_res: $el.data('highres')
          }];
          Tumblr.Lightbox.init(lbArray, 1);
          $('body').toggleClass('tumblr_lightbox_active');
        });
      }

      // Remove empty paragraphs
      function removeEmptyParagraphs() {
        $('p').filter(function () {
          return !$.trim($(this).html());
        }).remove();
      }

      // Append tumblr username to replies
      function appendTumblrUsername() {
        $('.caption').each(function () {
          $(this).children('.reply').each(function () {
            if (!$(this).find('.tumblr_blog').length && !$(this).is(':first-of-type')) {
              $(this).prepend('<a class="tumblr_blog" href="{BlogURL}">{Name}</a>');
            }
          });
        });
      }

      // Unnest blockquotes
      function unnestBlockquotes() {
        $('.post-content').unNest({
          yourCaption: ".caption",
          wrapName: ".reply",
          newCaptionUsername: false,
          originalPostCaptionUsername: false,
          tumblrAvatars: false,
          usernameColon: false
        });
      }

      // Toggle post content
      function togglePosts() {
        $('main').on('click', '.hide-post', function () {
          const $post = $(this).closest('.post');
          $post.children('.post-content').toggle();
          const $info = $(this).closest('.post-info');
          $info.toggleClass('open closed');
          $(this).closest('.button').toggleClass('open closed');
        });
      }

      // Call all callbacks
      function initialize() {
        setupLightbox();
        removeEmptyParagraphs();
        appendTumblrUsername();
        unnestBlockquotes();
        togglePosts();
      }

      initialize();

      // Infinite scroll setup (index page only)
      {block:IfInfiniteScroll}
      {block:IndexPage}
      $('#infinite').one('click', function () {
        $('main#content').infinitescroll({
          navSelector: "nav#pagination",
          nextSelector: "a#next",
          itemSelector: "article"
        }, function (newElements) {
          $(newElements).find('.photo-slideshow').pxuPhotoset({
            lightbox: true,
            rounded: false,
            borderRadius: '0px',
            gutter: '8px',
            photoset: '.photo-slideshow',
            photoWrap: '.photo-data',
            photo: '.pxu-photo'
          });

          $(newElements).find('.post-content').unNest({
            yourCaption: ".caption",
            wrapName: ".reply",
            newCaptionUsername: false,
            originalPostCaptionUsername: false,
            tumblrAvatars: false,
            usernameColon: false
          });

          initialize();
        });
        $(this).hide();
      });
      {/block:IndexPage}
      {/block:IfInfiniteScroll}
    });
  </script>

</body>

